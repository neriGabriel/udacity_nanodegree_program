<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Simple layout, with only two TextViews and one button where they can be aligned one below
    the other, so, we can use LinearLayout with orientation vertical to keep it simple -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.onBoarding.WelcomeFragment"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/first_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_detail_label"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/second_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_detail_label"
            android:padding="20dp"/>

        <Button
            android:id="@+id/instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instruction_label"
            android:layout_gravity="center"
            android:background="@drawable/button_background"/>

    </LinearLayout>
</layout>